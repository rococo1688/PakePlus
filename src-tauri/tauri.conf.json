{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "beforeBundleCommand": "pnpm tauri icon",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "turnapp",
        "version": "0.1.2"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "http": {
                "all": true,
                "scope": ["https://api.github.com/*"]
            },
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true,
                "create": true,
                "center": true,
                "setResizable": true
            }
        },
        "windows": [
            {
                "title": "TurnApp",
                "width": 800,
                "height": 600,
                "url": "https://juejin.cn/"
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.turnapp.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
